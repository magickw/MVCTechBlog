<div class="dashboard">
        <a href="/dashboard/create/"><button id="create-post" class="button b">Create post</button></a>
        
        <h2 class="title">Your posts</h2><hr>
{{#if posts.length}}
    </div>

    {{#each posts as |post|}}
        {{> post-info post}}
        
            <a href="/dashboard/edit/{{post.id}}"><button class="bnt button bnt-primary">Edit post</button></a>
        </div>
    {{/each}}

{{else}}
<h3>You do not currently have any posts</h3>

{{/if}}