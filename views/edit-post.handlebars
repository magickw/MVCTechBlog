<section>
     <a href="/dashboard" style="float:right">Back to Dashboard</a>
    <h2>Edit Post</h2>

    <form class="edit-post-form" data-id="{{post.id}}">
      <div class="form-group">
        <input class="post-title" type="text" value="{{post.title}}" />
      </div>
      <div class="form-group">
        <textarea class="post-text">{{post_text}}</textarea>
      </div>
      <div>
     <p>Posted by {{user.name}} on {{format_date date_created}}</p>
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button class="btn button btn-primary" type="submit">Update Post</button>
    <button class="btn button btn-danger" id="delete-btn">Delete Post</button>
    </form>
</section>  

<!--Scripts-->
<script src="/js/edit-post.js"></script>
<script src="/js/comment.js"></script>
<script src="/js/delete-post.js"></script>